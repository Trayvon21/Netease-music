.my-container {
    width: 100%;
    height: 100%;
    text-align: center;
}

.msg {
    width: 100%;
    text-align: center;
    margin-top: 300rpx;
    margin-bottom: 30rpx;
    font-size: 32rpx;
}

.user-info {
    position: relative;
    padding: 40rpx 60rpx;
}

.user-pic {
    margin-right: 40rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    box-shadow: 0 0 0 3rpx #dddddd;
}

.user-name {
    font-size: 40rpx;
    font-weight: 600;
}

.user-level {
    font-size: 28rpx;
    padding: 0 10rpx;
    border-radius: 20rpx;
    background: #ededed;
}

.user-control {
    position: absolute;
    margin-top: -20rpx;
    line-height: 40rpx;
    height: 40rpx;
    top: 50%;
    right: 40rpx;
    font-size: 28rpx;
    color: white;
    padding: 0 10rpx;
    border-radius: 20rpx;
    background: #a0a0a0;
}

.user-nav {
    margin: 40rpx;
    color: #bbbbbb;
}

.edit-icon {
    width: 38rpx;
    height: 38rpx;
}
.nav-top{
    height: 50rpx;
    color: black;
}

.btn {
    width: 200rpx !important;
    height: 80rpx !important;
    border-radius: 20rpx !important;
}