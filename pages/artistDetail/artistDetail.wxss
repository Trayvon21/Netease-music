.artist-top {
    height: 500rpx;
    width: 100%;
    position: fixed;
    top: 0;
}

.top-nav {
    position: absolute;
    top: 0;
    left: 0;
    padding: 40rpx;
    width: 100%;
}

.nav-icon {
    width: 60rpx;
    height: 60rpx;
}

.top-pic {
    width: 100%;
    height: 100%;
}

.artist-title {
    position: absolute;
    top: -120rpx;
    left: 0;
    margin-left: 40rpx;
    height: 120rpx;
    color: white;
}

.artist-name {
    font-size: 40rpx;
    font-weight: 700;
}

.artist-alias {
    line-height: 60rpx;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 0.596);
}

.artist-follow {
    position: absolute;
    top: -120rpx;
    right: 30rpx;
    padding: 10rpx;
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 30rpx;
    background: #f75665;
    color: white;
}

.artist-main {
    z-index: 10;
    position: absolute;
    top: 500rpx;
    margin-top: -80rpx;
    width: 100%;
}

.artist-nav {
    border-radius: 30rpx 30rpx 0 0;
    box-shadow: 0 0 0 3rpx rgba(150, 150, 150, 0.253);
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: white;
}

.artist-nav-each {
    text-align: center;
    flex: 1;
    font-size: 30rpx;
    height: 80rpx;
    position: relative;
}

.artist-nav-actived {
    color: #f75665;
}

.artist-num {
    position: absolute;
    left: 50%;
    top: 0;
    margin-left: 35rpx;
    color: rgb(133, 133, 133);
    line-height: 80rpx;
    font-size: 22rpx;
}

.artist-nav-line {
    position: absolute;
    left: 50%;
    margin-left: -30rpx;
    bottom: -1rpx;
    width: 60rpx;
    background: #f75665;
    height: 5rpx;
}

/* 歌手详情 */
.main-box {
    padding: 20rpx;
    background: white;
}

.main-title {
    font-size: 34rpx;
    margin: 30rpx 0;
    line-height: 40rpx;
}

.song-each {
    margin-top: 30rpx;
    position: relative;
}

.song-index {
    font-size: 32rpx;
    color: gray;
    font-weight: 700;
    line-height: 100rpx;
    width: 50rpx;
    height: 100rpx;
    text-align: center;
}

.song-pic {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
}

.song-name {
    font-size: 32rpx;
    line-height: 50rpx;
}

.song-desc {
    font-size: 28rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #bbbbbb;
}

.song-control {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 10rpx;
    top: 50%;
    margin-top: -25rpx;
}
.readmore{
    text-align: center;
}