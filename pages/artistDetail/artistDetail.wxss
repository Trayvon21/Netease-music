page {
    /* font-size: 16px; */
    height: 100%;
    background: #eeeeee;
}

scroll-view {
    height: 100%;
}

.top-nav {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 44px;
    line-height: 44px;
    background: gray;
    font-size: 36rpx;
    color: white;
    padding-top: env(safe-area-inset-top);
    z-index: 10;
}

.top-nav-icon {
    width: 36px;
    height: 36px;
    margin: 4px 20rpx;
    z-index: 99;
}

.top-title {
    z-index: 99;
}

.pic-size {
    width: 750rpx;
    height: 630rpx;
}

.top-bg {
    z-index: 1;
    position: absolute;
    bottom: 0;
    background: gray;
}

.playlistInfo {
    overflow: hidden;
    height: 630rpx;
    z-index: -2;
    background: gray;
    position: relative;
}

.info-bg {
    z-index: -1;
    position: absolute;
    top: 0;
}

.top-info {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    color: white;
    height: 150rpx;
}

.info-name {
    font-size: 38rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.info-count {
    font-size: 28rpx;
    line-height: 50rpx;
    color: #ececec;
}

.info-follow {
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    height: 40rpx;
    font-size: 30rpx;
    background-color: #f75665;
}


.artist-nav {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: white;
}

.artist-nav-each {
    text-align: center;
    flex: 1;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: relative;
}

.artist-nav-actived {
    color: #f75665;
}

.artist-num {
    position: absolute;
    left: 50%;
    top: 0;
    margin-left: 35rpx;
    color: rgb(133, 133, 133);
    line-height: 80rpx;
    font-size: 22rpx;
}

.artist-nav-line {
    position: absolute;
    left: 50%;
    margin-left: -30rpx;
    bottom: -1rpx;
    width: 60rpx;
    background: #f75665;
    height: 5rpx;
}

.main {
    margin-top: -40rpx;
    width: 100%;
    border-radius: 30rpx 30rpx 0 0;
    box-shadow: 0 0 0 3rpx rgba(150, 150, 150, 0.253);
    height: 80rpx;
    background: white;
}

.playlist-main {
    width: 100%;
}

.main-fixed {
    position: fixed;
    z-index: 99;
    margin: 0 !important;
}

.main-box {
    padding: 20rpx 40rpx;
    background: white;
}

.artist-name {
    font-size: 40rpx;
    font-weight: 700;
    width: 550rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.artist-alias {
    line-height: 60rpx;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 0.596);
}

/* 歌手详情 */

.main-title {
    font-size: 34rpx;
    margin: 30rpx 0;
    line-height: 40rpx;
}

.song-each {
    margin-top: 30rpx;
    position: relative;
}

.song-index {
    font-size: 32rpx;
    color: gray;
    font-weight: 700;
    line-height: 100rpx;
    width: 50rpx;
    height: 100rpx;
    text-align: center;
}

.song-pic {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
}

.song-name {
    font-size: 32rpx;
    line-height: 50rpx;
}

.song-desc {
    font-size: 28rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #bbbbbb;
}

.song-control {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 10rpx;
    top: 50%;
    margin-top: -25rpx;
}

.readmore {
    text-align: center;
}