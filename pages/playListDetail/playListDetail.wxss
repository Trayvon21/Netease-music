.playlist-top {
    height: 500rpx;
    width: 100%;
    position: fixed;
    top: 0;
}

.top-nav {
    position: absolute;
    height: 60rpx;
    top: 0;
    left: 0;
    padding: 40rpx;
    width: 100%;
    line-height: 60rpx;
    color: white;
    font-size: 40rpx;
}

.top-nav-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 30rpx;
}

.top-pic {
    width: 100%;
    height: 100%;
}

.filter {
    filter: blur(100rpx)
}

.top-info {
    position: absolute;
    top: 120rpx;
    left: 0;
    color: white;
}

.top-info-box {
    position: relative;
    width: 180rpx;
    width: 180rpx;
    margin: 0 40rpx;
}

.top-info-pic {
    height: 180rpx;
    width: 180rpx;
    border-radius: 5rpx;
}

.top-info-playCount {
    position: absolute;
    top: 0;
    right: 10rpx;
    font-size: 24rpx;
}

.top-info-icon {
    height: 40rpx;
    width: 40rpx;
    border-radius: 50%;
}

.top-info-title {
    font-size: 30rpx;
    line-height: 40rpx;
    width: 460rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.top-info-nickname {
    font-size: 26rpx;
    color: whitesmoke;
    margin-left: 20rpx;
}

.top-info-desc {
    margin-top: 30rpx;
    font-size: 24rpx;
    width: 460rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: whitesmoke;
}

.top-info-nav {
    position: absolute;
    bottom: 80rpx;
    left: 0;
    width: 100%;
}

.nav-each {
    width: 80rpx;
    text-align: center;
    color: whitesmoke;
    font-size: 28rpx;
}

.nav-icon {
    margin: 0 auto;
    width: 40rpx;
    height: 40rpx;
}

.playlist-main {
    z-index: 10;
    position: absolute;
    top: 500rpx;
    margin-top: -80rpx;
    width: 100%;

}


/* 歌手详情 */
.main-box {
    border-radius: 40rpx 40rpx 0 0;
    padding: 20rpx;
    background: white;
}

.song-each {
    position: relative;
    margin-top: 30rpx;
}

.song-control {
    position: absolute;
    right: 20rpx;
    top: 25rpx;
    width: 50rpx;
    height: 50rpx;
}

.song-index {
    font-size: 38rpx;
    color: gray;
    font-weight: 700;
    line-height: 100rpx;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
}

.song-name {
    font-size: 32rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.song-desc {
    font-size: 28rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #bbbbbb;
}