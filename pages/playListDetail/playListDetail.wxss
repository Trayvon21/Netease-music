page {
    /* font-size: 14px; */
    height: 100%;
    background: #eeeeee;
}

scroll-view {
    height: 100%;
}

.top-nav {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 44px;
    line-height: 44px;
    background: gray;
    font-size: 36rpx;
    color: white;
    padding-top: env(safe-area-inset-top);
    z-index: 1;
}

.top-nav-icon {
    width: 36px;
    height: 36px;
    margin: 4px 20rpx;
    z-index: 99;
}

.top-title {
    font-size: 14px;
    z-index: 99;
}

.pic-size {
    width: 750rpx;
    height: 630rpx;
}

.top-bg {
    z-index: 0;
    position: absolute;
    bottom: 0;
    background: gray;
}

.playlistInfo {
    overflow: hidden;
    height: 630rpx;
    z-index: -2;
    background: gray;
    position: relative;
}

.info-bg {
    z-index: -1;
    position: absolute;
    top: 0;
}

.info-main {
    width: 90%;
    margin-left: 5%;
    height: 240rpx;
}

.info-pic {
    position: relative;
    height: 240rpx;
    width: 240rpx;
    margin-right: 40rpx;
}

.playCount {
    color: white;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    line-height: 30rpx;
    font-size: 28rpx;
}

.playCount-icon {
    width: 30rpx;
    height: 30rpx;
}

.info-desc {
    height: 240rpx;
    color: white;
    position: relative;
}

.info-title {
    width: 390rpx;
    font-size: 32rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.info-nickname {
    margin: 20rpx 0;
}

.nick-icon {
    height: 40rpx;
    width: 40rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.desc-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
}

.info-description {
    width: 360rpx;
    font-size: 22rpx;
    line-height: 24rpx;
    height: 48rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.info-nav {
    margin-top: 20rpx;
    width: 100%;
}

.nav-each {
    width: 80rpx;
    text-align: center;
    color: white;
    font-size: 28rpx;
}

.nav-icon {
    margin: 0 auto;
    width: 40rpx;
    height: 40rpx;
}

.main-fixed {
    position: fixed;
    z-index: 99;
    margin-top: 0 !important;
}

/* 歌手详情 */
.main-box {
    width: 100%;
    margin-top: -40rpx;
    overflow: hidden;
    border-radius: 40rpx 40rpx 0 0;
    line-height: 80rpx;
    height: 80rpx;
    font-size: 32rpx;
    background: white;
    border-bottom: 1rpx solid #ededed;
}

.song-each {
    background: white;
    position: relative;
    padding-bottom: 30rpx;
}

.song-control {
    position: absolute;
    right: 20rpx;
    top: 25rpx;
    width: 50rpx;
    height: 50rpx;
}

.song-index {
    font-size: 38rpx;
    color: gray;
    font-weight: 700;
    line-height: 100rpx;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
}

.song-name {
    font-size: 32rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.song-desc {
    font-size: 28rpx;
    line-height: 50rpx;
    white-space: nowrap;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #bbbbbb;
}