.playlist-main {
    margin-top: 30rpx;
}

.playlist-pic {
    height: 180rpx;
    width: 180rpx;
    margin: 10rpx;
    border-radius: 30rpx;
}

.playlist-name {
    font-size: 34rpx;
    line-height: 50rpx;
    width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.playlist-desc {
    height: 100rpx;
    width: 500rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.playlist-info {
    font-size: 24rpx;
    line-height: 50rpx;
    color: #bbbbbb;
}